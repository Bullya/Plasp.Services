
@{
    ViewBag.Title = "登录";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登录 | Plasp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .panel {
            margin: 10%;
            margin-right: 15%;
            border: 0px;
            width: 40em;
            float: right;
        }

        .nav-tabs > li > a {
            width: 6em;
            height: 2em;
            line-height: 0.6em;
            text-align: center;
        }

        .login-content {
            height: 25em;
            border: 1px solid #DCDCDC;
            border-top: 0px;
        }

        .tab-content {
            position: relative;
            width: 28em;
            height: 20em;
            float: right;
            margin: 3em -10px 0px 0px;
            background: rgb(226, 225, 224);
            border-radius: 10px 0px 20px 0px;
            box-shadow: 0px -1px 1px rgb(202, 201, 200)
        }

        .tab-content:before {
            width: 0px;
            height: 0px;
            position: absolute;
            top: -12px;
            right: -21px;
            border-bottom: 12px solid rgb(202, 201, 200);
            border-right: 30px solid transparent;
            display: block;
            content: '';
        }

        .tab-content:after {
            width: 0px;
            height: 0px;
            position: absolute;
            top: 0px;
            right: -20px;
            border-left: 20px solid rgb(226, 225, 224);
            border-bottom: 19em solid transparent;
            display: block;
            content: '';
        }

        #loginTip, #registerTip {
            font-size: 10px;
            width: 100%;
            height: 5px;
            text-align: center;
            visibility: hidden;
            color: rgb(4, 190, 150)
        }

        .form-horizontal {
            text-align: center;
            padding: 10%;
            padding-top: 2%;
            line-height: 40px;
        }

        .set-password > label {
            width: 40%;
            font-size: 10px;
        }

        .btn-primary {
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="login-tmpl">
        <div class="panel panel-default">
            <div class="tab panel-tab">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#login" data-toggle="tab">登录</a>
                    </li>
                    <li>
                        <a href="#register" data-toggle="tab">注册</a>
                    </li>
                </ul>
                <div class="login-content">
                    <div class="tab-content">
                        <div id="login" class="tab-pane fade in active">
                            <form class="form-horizontal" role="form">
                                <label id="loginTip"></label>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="username" placeholder="用户名">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="password" placeholder="密码">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10 set-password">
                                        <label><input type="checkbox">记住密码</label>
                                        <label><a>忘记密码</a></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <button id="btnlogin" type="button" class="btn btn-primary">登录</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div id="register" class="tab-pane fade">
                            <form class="form-horizontal" role="form">
                                <label id="registerTip"></label>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="rg_username" placeholder="用户名">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="rg_password" placeholder="密码">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" name="rg_againpswd"
                                               placeholder="再次输入密码">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <button type="button" class="btn btn-primary">确定</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery-1.9.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/md5.js"></script>
    <script src="~/js/home/signinmain.js"></script>
</body>
</html>

